{
  "name": "@learn-surfcamp/source",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:cms": "npm run dev --workspace=apps/cms",
    "lint:frontend": "npm run lint --workspace=apps/frontend",
    "prettier-watch": "onchange \"**/*.tsx\" \"**/*.ts\" \"**/*.css\" -- prettier --write --ignore-unknown {{changed}}",
    "git:commit": "cz",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/node": "^20.19.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.28.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.2.0",
    "onchange": "^7.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "typescript-eslint": "^8.33.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "workspaces": [
    "apps/frontend",
    "apps/cms"
  ]
